# Database (asyncpg for async SQLAlchemy)
DATABASE_URL=postgresql+asyncpg://github_intel:github_intel_dev@localhost:5432/github_intel

# Redis (Celery broker + result backend)
REDIS_URL=redis://localhost:6379/0

# GitHub API (PAT with public_repo scope)
GITHUB_TOKEN=
# Delay (seconds) between each repo during ingestion to avoid rate limits and 503s
GITHUB_REQUEST_DELAY_SECONDS=1.0
# Hours to reuse persisted repo data without re-fetching from GitHub (0 = always fetch)
REPO_METADATA_CACHE_HOURS=24.0

# LLM provider: openai | anthropic
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Embeddings: local (free) or openai (paid)
EMBEDDING_PROVIDER=local
# Local: sentence-transformers model (e.g. all-MiniLM-L6-v2). OpenAI: text-embedding-3-small
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Content generation caps
MAX_REPOS_PER_DAY=20
MAX_REPOS_PER_CYCLE=5

# Ingestion caps (avoid GitHub rate limits; top N per topic)
MAX_REPOS_PER_CATEGORY=10
MAX_TRENDING_REPOS=25

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Frontend (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
